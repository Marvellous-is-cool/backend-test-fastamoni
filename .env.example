# Copy to .env and fill with production secrets
DATABASE_URL=postgresql://<user>:<password>@<host>/<database>?connection_limit=100&pool_timeout=5000&connect_timeout=30
NODE_ENV=production
JWT_SECRET=<a-long-random-secret>
EMAIL_USER=<gmail-address>
EMAIL_PASS=<gmail-app-password>
PRISMA_CLIENT_ENGINE_TYPE=library
TOPUP_SECRET=<a-long-random-secret>
# Comma-separated list of allowed origins for CORS
CORS_ORIGIN=https://your-frontend.example.com
POSTMAN_LINK=https://your-postman-docs-link

# Email provider configuration
# EMAIL_PROVIDER can be SMTP (default) or RESEND
EMAIL_PROVIDER=SMTP

# SMTP (default: Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
EMAIL_FROM_NAME=Fastamoni

# Resend HTTP provider (set EMAIL_PROVIDER=RESEND to use)
# RESEND_API_KEY=your_resend_api_key
